#include<iostream>
using namespace std;

int main(){
    int n,j=1;
    cout<<"Enter number: ";
    cin>>n;

    for(int i=1; i<=n; i++){
        j*=i;
    }
    cout<<"Factorial is: "<<j;
    return 0;
}

//With Recursion

#include <iostream>
using namespace std;

int factorial(int n) {
    if (n == 0) return 1;
    return n * factorial(n - 1);
}

int main() {
    int n;
    cout<<"Enter number: ";
    cin >> n;
    cout << "Factorial: " << factorial(n) << endl;
}
